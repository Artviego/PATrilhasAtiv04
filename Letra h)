using System;

namespace Atividade_04
{
	public class Program
	{
		public static void Main(string[] args)
		{		
			Compra();
			
			Console.ReadKey();
			
		}
		
		public static void Compra()
		{
			Console.Write("VocÃª deseja comprar uma mesa? ");
			string sim = Console.ReadLine().ToLower();
			
			if (sim == "sim" || sim == "s")
			{
				Console.Write("\nObrigado pela compra!");
				
			}
			else
			{
				Console.Write("\nTudo bem!");
			}
			
		}
	}
}
